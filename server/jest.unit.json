{
	"preset": "ts-jest",
	"testEnvironment": "node",
	"coverageDirectory": "./coverage",
	"testMatch": ["**/?(*.)+(test).ts"],
	"resetMocks": true,
	"clearMocks": true,
	"transform": {
		"^.+\\.ts?$": "babel-jest"
	},
	"testRegex": "(/tests/.*|(\\.|/)(test))\\.(ts?)$",
	"moduleFileExtensions": ["ts", "tsx", "json", "node"]
}
