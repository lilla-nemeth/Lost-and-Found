{
	"compilerOptions": {
		"target": "es2016",
		"module": "CommonJS",
		"allowJs": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"types": ["node", "jest"],
		"rootDir": "src",
		"sourceMap": true
	},
	"exclude": ["**/*.test.ts", "node_modules", "dist"],
	"include": ["src/**/*", "/**/*.ts"]
}
