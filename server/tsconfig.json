{
	"compilerOptions": {
		"target": "ES6",
		"module": "esnext",
		"allowJs": true,
		"outDir": "build",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"exclude": ["node_modules", "build/**/*"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
