{
	"compilerOptions": {
		"lib": ["es2023"],
		"target": "es2022",
		"module": "ES2022",
		"allowJs": true,
		"outDir": "build",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"exclude": ["node_modules", "build/**/*"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
